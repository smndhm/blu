  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "postinstall": "manypkg check",
    "build": "turbo build",
    "manypkg:fix": "manypkg fix",
    "lint:style": "stylelint '**/*.{scss,css}' --ignore-path .gitignore --allow-empty-input",
